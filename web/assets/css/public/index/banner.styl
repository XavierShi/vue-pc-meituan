.banner-container {
	width: 1190px;
	height: 600px;
	margin: 0 auto;
	position: relative;
	z-index: 15;

	.left-banner {
		width: 230px;
		height: 475px;
		background: -webkit-linear-gradient(-90deg, rgba(2, 181, 157, 0.85) 2%, rgba(22, 146, 183, 0.85) 100%);
		margin-top: -70px;
		position: absolute;
		color: #fff;
		box-sizing: border-box;

		h4 {
			color: #fff;
			font-size: 16px;
			font-weight: 400;
			padding-left: 15px;
			padding-top: 15px;
			height: 50px;
			box-sizing: border-box;
		}

		ul {
			padding: 10px 0;
			box-sizing: border-box;

			li {
				position: relative;
				list-style: none;
				height: 26px;
				line-height: 26px;
				padding: 2px 12px;
				box-sizing: border-box;
				display: flex;
				align-items: center;

				i {
					font-size: 14px;
				}

				i:nth-child(1) {
					color: rgba(255, 255, 255, 0.5);
				}

				i:nth-child(3) {
					position: absolute;
					right: 10px;
					font-size: 6px;
				}

				span {
					margin-left: 11px;
					font-size: 13px;

					a {
						color: #fff;
					}
				}

				&:hover {
					background-color: rgba(255, 255, 255, 0.2);

					i:nth-child(1) {
						color: rgba(255, 255, 255, 1);
					}
				}
			}
		}

		.category-nav {
			position: absolute;
			width: 400px;
			height: 416px;
			background-color: #fff;
			color: #666;
			top: 59px;
			left: 230px;

			.category-nav-item {
				.item-area {
					padding: 0 30px;

					.area-title {
						height: 22px;
						line-height: 22px;
						margin-top: 24px;
						padding-bottom: 10px;
						display: flex;
						justify-content: space-between;
						border-bottom: 1px solid #e5e5e5;

						a:nth-child(1) {
							color: #222;
							font-size: 16px;
							font-weight: 500;
						}

						a:nth-child(2) {
							color: #999;
							font-weight: 400;
							font-size: 12px;
						}
					}

					.area-content {
						a {
							font-size: 12px;
							color: #999;
							line-height: 15px;
							margin-right: 15px;
							margin-top: 10px;
							display: inline-block;

							&:hover {
								color: #31BBAC;
							}
						}
					}
				}
			}
		}
	}

	.right-banner {
		margin-left: 240px;
		position: relative;

		.banner-title {
			position: absolute;
			top: -55px;
			left: 20px;

			a {
				color: #222;
				font-weight: 700;
				font-size: 16px;
				margin: 0 20px;
			}

			a:nth-child(1) {
				&:hover {
					color: #fbc700;
				}
			}

			a:nth-child(2) {
				&:hover {
					color: #ed1e24;
				}
			}

			a:nth-child(3) {
				&:hover {
					color: #f04d4e;
				}
			}

			a:nth-child(4) {
				&:hover {
					color: #FDC411;
				}
			}

			a:nth-child(5) {
				&:hover {
					color: #31BBAC;
				}
			}

			a:nth-child(6) {
				&:hover {
					color: #f04d4e;
				}
			}
		}
	}
}