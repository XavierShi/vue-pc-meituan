.m-nav {
	color: #999;

	.list {
		display: flex;
		flex-direction: row;

		>li {
			position: relative;
			display: flex;
			flex-direction: column;
			height: 40px;
			padding: 12px 14px;
			justify-content: center;
			box-sizing: border-box;
			border-left: 1px solid transparent;
			border-right: 1px solid transparent;
			z-index: 1001;

			>a {
				color: #999;

				&:hover {
					color: #31BBAC;
				}
			}

			>ul {
				list-style: none;
				position: absolute;
				border: 1px solid #e5e5e5;
				background-color: #ffffff;
				text-align: center;
				top: 95%;
				z-index: 1000;
				box-shadow: 0 3px 5px 0 rgba(0, 0, 0, 0.1);
				// box-sizing: border-box;
				width: 100%;
				left: -2px;
				padding: 0 1px;
				border-bottom-left-radius: 4px;
				border-bottom-right-radius: 4px;
				display: none;

				>li {
					>a {
						color: #999;
						line-height: 35px;

						&:hover {
							color: #31BBAC;
						}
					}
				}
			}

			.header-nav-second {
				width: 1200px;
				box-sizing: border-box;
				padding: 30px 36px 36px 47px;
				border-top-left-radius: 4px;
				position: absolute;
				border: 1px solid #e5e5e5;
				background-color: #fff;
				z-index: 1000;
				top: 95%;
				right: -2px;
				box-shadow: 0 3px 5px 0 rgba(0, 0, 0, 0.1);
				border-bottom-left-radius: 4px;
				border-bottom-right-radius: 4px;
				display: none;

				.header-hotel {
					width: 234px;

					dd {
						width: 33%;
						text-align: center;
						float: left;
						padding: 5px 0;
					}
				}

				.header-food {
					width: 156px;

					dd {
						width: 50%;
						text-align: center;
						float: left;
						padding: 5px 0;
					}
				}

				.header-movie {
					width: 90px;

					dd {
						width: 100%;
						text-align: center;
						float: left;
						padding: 5px 0;
					}
				}

				.header-app {
					float: right;

					dd {
						display: inline-block;
						margin: 0 8px;
					}

					.appicon {
						width: 60px;
						height: 60px;
					}
				}
			}

			.header-nav-third {
				margin-right: 47px;
				float: left;

				dt {
					margin-bottom: 26px;
					font-size: 14px;
					color: #31BBAC;
					text-align: center;
				}

				dd {
					a {
						color: #999;

						&:hover {
							color: #31BBAC;
						}
					}
				}
			}
		}

		>li:nth-child(1) {
			&:hover {
				background-color: #fff;
				border-bottom: 1px solid transparent;
				box-shadow: -2px 0px 5px 0 rgba(0, 0, 0, 0.1), 2px 0 5px 0 rgba(0, 0, 0, 0.1);

				>ul {
					display: block;
					border-top: 1px solid transparent;
				}
			}
		}

		>li:nth-child(3) {
			>ul {
				width: 140%;
				left: calc(-40% - 2px);
				border-top-left-radius: 4px;
			}

			&:hover {
				background-color: #fff;
				box-shadow: -2px 0px 5px 0 rgba(0, 0, 0, 0.1), 2px 0 5px 0 rgba(0, 0, 0, 0.1);

				>ul {
					display: block;

					&:after {
						content: ' ';
						background-color: #fff;
						width: 78px;
						height: 3px;
						position: absolute;
						top: -2px;
						right: 0;
					}
				}
			}
		}

		>li:nth-child(4) {
			&:hover {
				background-color: #fff;
				box-shadow: -2px 0px 5px 0 rgba(0, 0, 0, 0.1), 2px 0 5px 0 rgba(0, 0, 0, 0.1);

				>div {
					display: block;

					&:after {
						content: ' ';
						background-color: #fff;
						width: 78px;
						height: 3px;
						position: absolute;
						top: -2px;
						right: 0;
					}
				}
			}
		}
	}
}