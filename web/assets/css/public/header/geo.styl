.m-geo {
	display: flex;

	.el-icon-location {
		margin-top: 3px;
	}

	.current-city {
		color: #666;
	}

	.change-city {
		background-color: #f5f5f5;
		border: 1px solid #e5e5e5;
		border-radius: 2px;
		margin: 0 2px;
		padding: 0 1px 0 2px;
		text-align: center;
		color: #666;

		&:hover {
			color: #31BBAC;
		}
	}

	.near-citys {
		a {
			color: #999;
			margin: 0 4px;

			&:hover {
				color: #31BBAC;
			}
		}
	}
}