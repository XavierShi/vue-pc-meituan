.pg-unitive-login {
	background-color: #fff;
	color: #666;
	font: 400 14px / 1.5 'Hiragino Sans GB', 'WenQuanYi Micro Hei', tahoma, sans-serif;

	.cf {
		&:after {
			content: '';
			display: block;
			clear: both;
			height: 0;
			overflow: hidden;
			visibility: hidden;
		}
	}

	.header {
		width: 980px;
		margin: 40px auto 30px;
		height: auto;

		.site-logo {
			background-image: url('https://s0.meituan.net/bs/file/?f=fe-sso-fs:build/assets/sp-retina.b95a7dd.png'); // s0.meituan.net/bs/file/?f=fe-sso-fs:build/assets/sp-retina.b95a7dd.png)
			background-position: 0 !important;
			background-size: contain !important;
			width: 82px;
			height: 54px;
			color: #2bb8aa;
			display: inline-block;
			overflow: hidden;
			text-indent: -9999px;
		}
	}

	.site-body-wrapper {
		.site-body {
			width: 980px;
			margin: 0 auto 70px;

			.promotion-banner {
				height: 370px;
				width: 480px;
				margin: 0 115px 0 0;
				float: left;
			}

			.login-section {
				float: left;
				padding-top: 0;
				width: 270px;
				margin: 0 auto;
				background-color: #fff;
			}
		}
	}

	.footer {
		font-size: 12px;
		color: #999;
		width: 980px;
		margin: 0 auto 30px;
		clear: both;

		.site-info-nav {
			margin-bottom: 20px;
			padding: 12px 0;
			border-top: 1px solid #eee;
			border-bottom: 1px solid #eee;
			height: 24px;

			ul {
				float: left;
				width: 594px;
				color: #eee;
				list-style: none;

				li {
					padding-left: 0;
					float: left;
					margin: 5px 0;
					padding: 0 16px;
					line-height: 14px;
					border-right: 1px solid #eee;

					a {
						color: #999;

						&:hover {
							text-decoration: underline;
						}
					}
				}

				.last {
					border-right: none;
				}
			}
		}

		.copyright {
			font-size: 12px;
		}
	}
}