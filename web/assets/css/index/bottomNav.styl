.style-container {
  margin: 40px auto;
  width: 1190px;

  .index-nav-container-style {
    background-image: linear-gradient(-90deg, #0ECAC7 0, #06C1AE 100%);
  }

  .style-area {
    width: 100%;
    background-color: #fff;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    box-sizing: border-box;
    padding: 5px 0 0 0;
    display: flex;
    flex-wrap: wrap;

    .classification:last-child .sublist {
      border-bottom: none;
    }

    .subtitle {
      width: 100px;
      height: 100%;
      float: left;
      font-size: 14px;
      font-weight: 500;
      color: #222;
      text-align: center;
      padding: 10px 0;
    }

    .sublist {
      width: 1090px;
      height: auto;
      padding-top: 12px;
      float: left;
      border-bottom: 1px solid #E5E5E5;
      overflow: hidden;

      .list-item {
        width: 100px;
        height: 17px;
        font-size: 12px;
        text-align: left;
        margin-bottom: 13px;
        float: left;

        a {
          display: block;
          width: 80px;
          cursor: pointer;
          color: #666;
          text-overflow: ellipsis;
          white-space: nowrap;
          overflow: hidden;

          &:hover {
            color: #31BBAC;
          }
        }
      }
    }
  }
}
