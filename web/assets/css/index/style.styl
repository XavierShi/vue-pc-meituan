.style-container {
    margin: 40px auto;
    width: 1190px;

    .index-nav-container-style {
        background-color: rgb(190, 164, 116);
        background-image: linear-gradient(to right, rgb(194, 176, 142) 3%, rgb(190, 164, 116) 100%);
    }

    .style-area {
        width: 100%;
        padding: 11px 10px 10px;
        background-color: #fff;
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
        box-sizing: border-box;
        border-left: 1px solid #e5e5e5;
        border-right: 1px solid #e5e5e5;
        border-bottom: 1px solid #e5e5e5;
        height: 650px;

        .quality-card {
            width: 33.3%;
            height: 314px;
            padding: 10px;
            box-sizing: border-box;
            float: left;
            background: #fff;
            transition: background-color 0.5s;

            .tags {
                display: flex;
            }

            .tag {
                height: 18px;
                line-height: 18px;
                box-sizing: border-box;
                text-align: center;
                border: 1px solid #d8d8d8;
                border-radius: 2px;
                margin-right: 10px;
                margin-bottom: 5px;
                padding: 0 3px;
            }

            .quality-img {
                background-size: cover;
                max-width: 100%;
                height: 208px;
                margin-bottom: 11px;
                cursor: pointer;

                img {
                    width: 100%;
                    height: 100%;
                    border-radius: 4px;
                }
            }

            .title {
                font-size: 16px;
                color: #222;
                height: 22px;
                line-height: 22px;
                margin-bottom: 8px;
                font-weight: 500;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                cursor: pointer;
            }

            .sub-title {
                font-size: 12px;
                color: #999;
                line-height: 18px;
                height: 18px;
                margin-bottom: 7px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .sold {
                font-size: 12px;
                color: #999;
                float: right;
                margin-top: 10px;
            }

            .price-symbol {
                font-size: 14px;
                color: #BE9E4D;
                font-weight: 500;
            }

            .current-price {
                font-size: 22px;
                color: #BE9E4D;
                margin-right: 6px;
                letter-spacing: -0.8px;
                cursor: pointer;
            }

            .old-price {
                font-size: 12px;
                color: #999;
                text-decoration: line-through;
            }

            &:hover {
                background: #F4F4F4;
                -webkit-transition: background-color 0.5s;
                -ms-transition: background-color 0.5s;
                transition: background-color 0.5s;
                border-radius: 4px;
            }
        }
    }
}
