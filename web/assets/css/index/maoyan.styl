.style-container {
  margin: 40px auto;
  width: 1190px;

  .index-nav-container-style {
    background: linear-gradient(to right, rgb(250, 60, 104) 2%, rgb(254, 70, 77) 97%) rgb(250, 60, 104);
  }

  .swiper-container {
    background-color: #fff;
    padding: 10px 10px 20px 10px;
    border-left: 1px solid #e5e5e5;
    border-right: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    box-sizing: border-box;

    &:hover {
      .swiper-button-prev, .swiper-button-next {
        opacity: 1;
      }
    }

    .swiper-slide {
      display: flex;
      justify-content: space-around;
      align-items: center;
      position: relative;
      padding-top: 10px;

      a {
        position: relative;

        img {
        }

        span {
          position: absolute;
          top: -20px;
          left: 10px;
          color: #fff !important;
        }

        .score {
          top: -40px;
          font-size: 12px;
          font-weight: 700;

          b {
            font-size: 16px;
            color: #FD9827;
            font-weight: 500;
          }
        }

        .title {
          font-size: 16px;
          white-space: nowrap;
          width: 6em;
          overflow: hidden;
          text-overflow: ellipsis;
          font-weight: 500;
        }

        .buy-ticket {
          background: #FF4949;
          border-radius: 100px;
          color: #fff;
          padding: 2px 12px 3px;
          font-size: 14px;
          position: absolute;
          top: -24px;
          cursor: pointer;
          line-height: 20px;
          text-align: center;
          float: right;
          margin-left: 140px;
          width: 30px;
        }
      }
    }

    .swiper-button-prev, .swiper-button-next {
      width: 40px;
      height: 40px;
      background: #333;
      position: absolute;
      z-index: 99;
      top: 43%;
      border-radius: 40px;
      opacity: 0;
      transition: opacity 0.5s;
      transform: scale(0.95);
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      font-weight: bold;
    }

    .swiper-button-prev.swiper-button-disabled, .swiper-button-next.swiper-button-disabled {
      cursor: auto;
      pointer-events: none;
    }
  }

  .style-area {
    width: 100%;
    // padding: 0px 10px;
    background-color: #fff;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    box-sizing: border-box;

    // height: 650px;
    .quality-card {
      width: 33.3%;
      height: 314px;
      padding: 10px;
      box-sizing: border-box;
      float: left;
      background: #fff;
      transition: background-color 0.5s;

      .tags {
        display: flex;
      }

      .tag {
        height: 18px;
        line-height: 18px;
        box-sizing: border-box;
        text-align: center;
        border: 1px solid #d8d8d8;
        border-radius: 2px;
        margin-right: 10px;
        margin-bottom: 5px;
        padding: 0 3px;
      }

      .quality-img {
        background-size: cover;
        max-width: 100%;
        height: 208px;
        margin-bottom: 11px;
        cursor: pointer;

        img {
          width: 100%;
          height: 100%;
          border-radius: 4px;
        }
      }

      .title {
        font-size: 16px;
        color: #222;
        height: 22px;
        line-height: 22px;
        margin-bottom: 8px;
        font-weight: 500;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        cursor: pointer;
      }

      .sub-title {
        font-size: 12px;
        color: #999;
        line-height: 18px;
        height: 18px;
        margin-bottom: 7px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .sold {
        font-size: 12px;
        color: #999;
        float: right;
        margin-top: 10px;
      }

      .price-symbol {
        font-size: 14px;
        color: #BE9E4D;
        font-weight: 500;
      }

      .current-price {
        font-size: 22px;
        color: #BE9E4D;
        margin-right: 6px;
        letter-spacing: -0.8px;
        cursor: pointer;
      }

      .old-price {
        font-size: 12px;
        color: #999;
        text-decoration: line-through;
      }

      &:hover {
        background: #F4F4F4;
        -webkit-transition: background-color 0.5s;
        -ms-transition: background-color 0.5s;
        transition: background-color 0.5s;
        border-radius: 4px;
      }
    }
  }
}
