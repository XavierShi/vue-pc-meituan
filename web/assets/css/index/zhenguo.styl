.style-container {
  margin: 40px auto;
  width: 1190px;

  .index-nav-container-style {
    background: linear-gradient(to right, rgb(243, 182, 74) 2%, rgb(242, 197, 69) 97%) rgb(243, 182, 74);
  }

  .style-area {
    width: 100%;
    background-color: #fff;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    box-sizing: border-box;
    padding: 20px 10px 0 10px;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;

    .minsu-item {
      width: 31.5%;

      .product-card-header {
        position: relative;

        .product-image {
          width: 370px;
        }

        .header-image {
          border: 2px solid #FFF;
          height: 48px;
          width: 48px;
          position: absolute;
          bottom: -12px;
          right: 15px;
          z-index: 9;
          border-radius: 40px;
          background-size: 100%;
          background-position: 50% 50%;
          background-repeat: no-repeat;
        }
      }

      .product-info {
        .product-title {
          font-size: 16px;
          color: #222;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          margin: 7px 0;
          font-weight: 400;
          width: 297px;
        }

        .sub-title {
          font-size: 12px;
          color: #999;
          text-align: left;
        }

        .price {
          font-weight: 500;
          font-size: 22px;
          color: #F60;
          letter-spacing: -0.8px;
          padding: 4px 0;

          .price-icon {
            font-size: 14px;
          }
        }
      }
    }
  }
}
