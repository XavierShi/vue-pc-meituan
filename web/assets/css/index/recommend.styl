.style-container {
  margin: 40px auto;
  width: 1190px;

  .index-nav-container-style {
    background: linear-gradient(to right, rgb(18, 210, 198) 2%, rgb(14, 190, 212) 97%) rgb(18, 210, 198);
  }

  .style-area {
    width: 100%;
    background-color: #fff;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    box-sizing: border-box;
    padding: 10px 10px 20px;
    display: flex;
    flex-wrap: wrap;

    .card-container {
      width: 20%;
      padding: 10px;
      box-sizing: border-box;
      cursor: pointer;

      .img-box {
        img {
          width: 100%;
        }
      }

      .info-box {
        .title {
          font-size: 16px;
          font-weight: 500;
          color: #222;
          text-overflow: ellipsis;
          overflow: hidden;
          white-space: nowrap;
        }

        .rete-stars {
          display: inline-block;

          >>> .el-rate__icon {
            font-size: 12px;
          }
        }

        .comment-number {
          font-size: 12px;
          color: #999;
          height: 24px;
          line-height: 24px;
          margin-left: 10px;
        }

        .address {
          font-size: 12px;
          color: #999;
          width: 100%;
          height: 18px;
          line-height: 18px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }

        .yuan {
          font-size: 14px;
          font-weight: 700;
          color: #F60;
        }

        .numfont {
          font-size: 22px;
          color: #f60;
          font-weight: 500;
        }

        .price-desc {
          font-size: 12px;
          font-weight: 700;
          color: #f60;
          margin-left: 4px;
        }
      }

      &:hover {
        background: #F4F4F4;
        -webkit-transition: background-color 0.5s;
        -ms-transition: background-color 0.5s;
        transition: background-color 0.5s;
        border-radius: 4px;
      }
    }
  }
}
